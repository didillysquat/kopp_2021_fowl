// Global default params

params {
    // Parameters for the pre processing pipeline
    raw_reads_dir = "/home/humebc/projects/20210125_kopp_guinea_fowl/raw_seq_files"
    ref_assembly_path = "/home/humebc/projects/20210125_kopp_guinea_fowl/nf_pipeline_kopp/nummel_ref_assembly/GCF_002078875.1_NumMel1.0_genomic.fna"
    read_info_file = "/home/humebc/projects/20210125_kopp_guinea_fowl/raw_seq_files/file_list.tsv"
    output_dir = "/home/humebc/projects/20210125_kopp_guinea_fowl/nf_pipeline_kopp/20210317_full_run_preprocessing"
    subsample = false
    subsample_depth = 10000

    // Mapping package to use ["bwa" | "ngm" ]
    mapping = "bwa"
    
    // If true, then refernce sequence indices will be made from scratch even if
    // the indice files already exist
    // If false, the appropriate indice files will be searched for, and if found
    // these will be used rather than recomputing the indices
    // Useful when indices have already been created
    remake_indices = false


    // Threads
    trimmomatic_threads = 5
    nextgenmap_threads = 5
    

    // Parameters for the variant calling with GATK
    bam_input_dir = ""
    bam_common_extension = ".merged.deduplicated.sorted.bam"

    // Memory
    // The maximum heap memory for the GATK HaplotypeCaller in GB
    haplotypecaller_max_mem = 8
}
profiles{
    docker {
        docker.enabled = true
    }
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }
}

executor{
    cpus=200
    memory = '800 GB'
}
